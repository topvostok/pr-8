<UserControl x:Class="Shop_Пешин.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Shop_Пешин.Elements"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="200"
             Margin="15,0,0,0">
    <!-- Добавлен отступ справа между элементами -->

    <Grid>
        <Border Width="200" Height="300" CornerRadius="20" Background="#FF5A5A5A">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Изображение товара -->
                <Image Grid.Row="0" Margin="20" Width="160" Height="160" 
                       Source="C:\Users\student-a502\Desktop\Shop_Пешин\lmages\ic_item.png" 
                       Stretch="Uniform"/>

                <!-- Информация о товаре -->
                <StackPanel Grid.Row="1" Margin="10">
                    <Label x:Name="tb_Name" Content="Название" 
                           HorizontalContentAlignment="Center" 
                           FontWeight="Bold" Foreground="White"
                           FontSize="14" Padding="0" Margin="0,0,0,5"/>

                    <Label x:Name="tb_Price" Content="Цена: " 
                           Foreground="White" FontSize="12"
                           Padding="0" Margin="0,0,0,5"/>

                    <Label x:Name="tb_Characteristic" Content="Характеристика: " 
                           Foreground="White" FontSize="12"
                           Padding="0"/>
                </StackPanel>
            </Grid>

            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" 
                                  Opacity="0.3" Color="Black"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>